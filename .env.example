# AI Diagram Generator Environment Configuration

# Backend Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# AI Service Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# File Storage Configuration
TEMP_FILE_DIR=./temp
TEMP_FILE_CLEANUP_INTERVAL=3600000
TEMP_FILE_MAX_AGE=86400000

# Draw.io CLI Configuration
DRAWIO_CLI_PATH=drawio
DRAWIO_EXPORT_TIMEOUT=30000

# Performance Configuration
REQUEST_TIMEOUT=30000
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_WINDOW_MS=60000
LLM_CACHE_TTL=3600000
LLM_CACHE_MAX_SIZE=100

# Security Configuration
CORS_ORIGIN=http://localhost:3000
HELMET_CSP_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Production Overrides (uncomment for production)
# NODE_ENV=production
# PORT=8080
# FRONTEND_URL=https://your-domain.com
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# CORS_ORIGIN=https://your-domain.com
# LOG_LEVEL=warn