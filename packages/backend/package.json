{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for AI diagram generator using mastra framework",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && tsc && npm run build:copy-assets",
    "build:copy-assets": "echo 'No assets to copy'",
    "build:production": "NODE_ENV=production npm run build",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test"
  },
  "dependencies": {
    "@mastra/core": "^0.1.0",
    "@anthropic-ai/sdk": "^0.24.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.0.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/uuid": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "rimraf": "^5.0.0"
  }
}