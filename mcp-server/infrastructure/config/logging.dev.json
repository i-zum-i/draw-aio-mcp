{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s [%(pathname)s:%(lineno)d]"
    },
    "simple": {
      "format": "%(levelname)s - %(message)s"
    },
    "colored": {
      "()": "colorlog.ColoredFormatter",
      "format": "%(log_color)s%(levelname)-8s%(reset)s %(blue)s%(name)s%(reset)s - %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "colored",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "/app/logs/mcp-server-dev.log",
      "mode": "w",
      "encoding": "utf8"
    }
  },
  "loggers": {
    "mcp_server": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "anthropic": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "httpx": {
      "level": "INFO",
      "handlers": ["console"],
      "propagate": false
    },
    "uvicorn": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["console", "file"]
  }
}